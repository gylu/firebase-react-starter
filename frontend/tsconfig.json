{
    "compilerOptions": {
      "target": "ES2020", // Modern target
      "composite": true,

      "useDefineForClassFields": true,
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "module": "ESNext",
      "allowSyntheticDefaultImports": true,

      "skipLibCheck": true,
  
      /* Bundler mode */
      "moduleResolution": "bundler", // Recommended for Vite
      "allowImportingTsExtensions": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true, // Vite handles emission
      "jsx": "react-jsx", // Modern JSX transform
  
      /* Linting */
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "forceConsistentCasingInFileNames": true, // Important for cross-platform compatibility
  
      /* Aliases (Optional but useful) */
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": ["src", "vite.config.ts"], // Include vite config for type checking
    "references": [{ "path": "./tsconfig.node.json" }]
  }
  